extend layouts/master

block title
  | Ristorante 34 - Contatti

block append metatags 
  meta(name='description', content="Tutto è iniziato nel 1968, anno in cui Walter Casalini, dopo aver ceduto lo storico albergo di famiglia, l'Hotel Internazionale di Milano Marittima, aperto nel dopoguerra da pioniere della riviera romagnola, ha dato vita, a Roma, nella storica Via Mario dè Fiori, al Ristorante al 34.")
  meta(property="og:url"           content="http://ristoranteal34.it/contact.html")
  meta(property="og:type"          content="website")
  meta(property="og:title"         content="Ristorante al 34 - Contatti")
  meta(property="og:description"   content="Tutto è iniziato nel 1968, anno in cui Walter Casalini, dopo aver ceduto lo storico albergo di famiglia, l'Hotel Internazionale di Milano Marittima, aperto nel dopoguerra da pioniere della riviera romagnola, ha dato vita, a Roma, nella storica Via Mario dè Fiori, al Ristorante al 34.")
  meta(property="og:image"         content="http://ristoranteal34.it/images/contact.jpg")

block content
  // Hero page image
  .hero__page.hero__page--contact
	
  // Page container
  .grid-container
    .page__container.page__container--contact
      .grid-x
        .large-9.medium-7.small-12.column
          .main__content
            .grid-x
              .large-6.medium-6.small-12.column
                h2 Dove siamo
                p
                  | Ristorante al 34
                  br
                  | Via Mario de’ Fiori 34, (P.zza di Spagna)
                  br
                  | 00187 Roma
                p
                  |	Tel. +39 06 6795091
                  br
                  | Fax +39 06 6786980
                p
                  | e-mail: 
                  a(href="mailto:ristorante34@yahoo.it") ristorante34@yahoo.it
              .large-6.medium-6.small-12.column
                h2 Orari di apertura
                ul
                  li
                    | Aperto tutti i giorni
                  li
                    | Lunedì
                    span 17.30 - 23.00
                  li
                    | Martedì - Domenica
                    span 12.30 - 23.00
            .clear__section
            .where__contact
              .grid-x
                .large-12.medium-12.small-12.column
                  #map-ris34
        .large-3.medium-5.small-12.column
          .sidebar__content
            img(src="/images/decoration-top.png", alt="")
            include layouts/partials/contact
            img(src="/images/decoration-bottom.png", alt="")